<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/AliceBlue" >

    <RelativeLayout
        android:id="@+id/rlt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:background="@color/color_light_blue_500"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Create schedule"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_previous_item" />

        <ImageView
            android:id="@+id/like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/like"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/rlt"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp" >

        <RelativeLayout
            android:id="@+id/reloutDAtePicker"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edittextbg"
            android:padding="5dp"
            android:paddingTop="25dp" >

            <RelativeLayout
                android:id="@+id/selectDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/buttoncolor" >

                <ImageView
                    android:id="@+id/imageView1Cal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_menu_today" />

                <TextView
                    android:id="@+id/textView1date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imageView1Cal"
                    android:text="MM-DD-yyyy"
                    android:textColor="@color/Gray" />
            </RelativeLayout>
 
<RelativeLayout
                android:id="@+id/select_time"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/buttoncolor" >

                <TextView
                    android:id="@+id/textView1time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="hh:mm"
                    android:textColor="@color/Gray" />

                <ImageView
                    android:id="@+id/imageView2Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/textView1time"
                    android:background="@drawable/buttoncolor"
                    android:src="@drawable/perm_group_device_alarms" />
            </RelativeLayout>
             
        </RelativeLayout>

        <ImageView
            android:id="@+id/ImagePost"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_below="@+id/reloutDAtePicker"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImagePost"
            android:layout_margin="5dp"
            android:background="@drawable/edittextbg"
            android:hint="@string/tweethint"
            android:lines="4"
            android:padding="15dp"
            android:textColor="@color/black" >
        </EditText>

        <RelativeLayout
            android:id="@+id/relout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText1"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextbg" >

            <TextView
                android:id="@+id/textView1Counted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="Selected : 21"
                android:textColor="@color/Gray" />

            <RelativeLayout
                android:id="@+id/addUsersRlt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" >

                <ImageView
                    android:id="@+id/imageViewAddUsers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/ic_menu_invite" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imageViewAddUsers"
                    android:text="Add Users"
                    android:textColor="@color/Gray"
                    android:textSize="10sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_alignRight="@+id/relativeLayout1"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittextbg" >

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="?attr/colorPrimary"
            android:gravity="center"
            android:text="@string/Schedulle"
            android:textColor="@color/White" />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_below="@+id/button1"
            android:layout_marginTop="10dp" />
    </RelativeLayout>

</RelativeLayout>